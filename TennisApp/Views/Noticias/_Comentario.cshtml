@model TennisApp.Models.Comentario

@using (Html.BeginForm("AddComment", "Comentarios", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
    <div>
        <input type="hidden" class="form-control" id="" name="iDnoticiaNova" value=@Model.Noticia.IdNoticia>
        @Html.TextAreaFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control" } })
        <div class="tdDireita">
            <input type="submit" value="Comentar" class="btn btnCriar" />
        </div>
    </div>

}


